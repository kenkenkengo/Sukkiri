<div class="col-md-3">
  <div class="like-post-wrapper">
    <p>
      <%= like.post.content %>
    </p>
    <small><%= like.post.user.username %>のグループ：<%= link_to "#{like.post.group.name}", group_posts_path(like.post.group) %></small>
    <small>
      <% if like.post.deadline.present? %>
        <% if like.post.deadline <= Time.current %>
          <div class="expirs">
        <% elsif like.post.deadline - Time.current <= 7.days %>
          <div class="approaching">
        <% else %>
          <div class="still">
        <% end %>
        <%= "期限：#{like.post.deadline.strftime("%Y年%m月%d日")}" %>
        </div>
      <% end %>
    </small>
    <%= link_to((image_tag like.post.image.thumb_small.url), group_post_path(like.post.group, like.post), remote: true) %>
    <div id="image-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
  </div>
</div>
