<% provide(:title, "新規登録") %>
<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h4 class="text-secondary">新規登録</h4>
      </div>
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.text_field :name, autofocus: true, placeholder: "フルネーム", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :username, autofocus: true, placeholder: "ユーザーネーム", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
      <p class="devise-link">
        アカウントをお持ちですか？
        <%= link_to "サインインする", new_user_session_path %>
      </p>
    </div>
  </div>
</div>