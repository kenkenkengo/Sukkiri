<% provide(:title, "サインイン") %>
<%= render 'shared/recruit_signin' %>
<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h4 class="text-secondary">サインインフォーム</h4>
      </div>
      <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
        <div class="form-group">
          <%= f.text_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "サインインする", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
      <div class="logo-wrapper">
        <%= link_to image_tag("f_logo.png", size: '30x30'), user_facebook_omniauth_authorize_path %>
      </div>
      <p class="devise-link">
        アカウントをお持ちでないですか？
        <%= link_to "登録する", new_user_registration_path %>
      </p>
    </div>
  </div>
</div>